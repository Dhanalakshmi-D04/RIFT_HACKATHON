# Backend Environment Variables
# Copy this to .env and fill in your values

# Port (Railway sets PORT automatically, but you can override for local dev)
PORT=4100
AGENT_PORT=4100

# Retry limit for CI/CD iterations
RETRY_LIMIT=5

# GitHub Token (required for cloning/pushing repos)
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# LLM Provider Keys (choose one or more)
OPENAI_API_KEY=your_openai_key_here
# OR
GEMINI_API_KEY=your_gemini_key_here
# OR
ANTHROPIC_API_KEY=your_anthropic_key_here

# CORS Origins (comma-separated, or * for all)
CORS_ORIGINS=http://localhost:4173,https://your-vercel-domain.vercel.app
