{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "docker/Dockerfile",
        "target": "api"
    },
    "deploy": {
        "startCommand": "node dist/apps/api/main.js",
        "restartPolicyType": "ON_FAILURE",
        "numReplicas": 1
    }
}